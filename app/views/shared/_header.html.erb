<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='nav'>
    <div  class='header-title'>
      <%= link_to 'SPP_APP', root_path, class: 'spp-app-icom' %>
    </div>
    <div  class='title_description'>
      (Si Potes Probare : やればできる)
    </div>

    <div  class='dummy'>
      <% if flash[:notice] %>
        <div class="notice" id="notice">
          <%= link_to flash[:notice],"/users/#{current_user.id}", class:"notice" %>
        </div>
      <% end %>
    </div>

      <%#ログインの有無で表示が変わる条件分岐%>
    <div class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "/users/#{current_user.id}", class: "user-nickname" %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <script>
        function guide() {
          var fn = function() {
            confirm("やりかたがわからないかな？\nはじめてのときは、しんきとうろくをしてね！\nまえにきたことがあるときは、ログインをしてあそんでね。\nおうちのひとにきいてみよう！");
          };
          var tm = 20000;
          setTimeout(fn,tm);
        };
        window.addEventListener('load', guide)
      </script>
      <% end %>
    </div>
      <%#ログインの有無で表示が変わる条件分岐%>
  </div>
</header>